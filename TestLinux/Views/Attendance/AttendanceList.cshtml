@model List<AttendanceOutput>
@{
    Layout = "_Layout2.cshtml";
    int sno = 0;
}

<div class="container" style="margin-top:20px;">
    <form  action="/Attendance/AttendanceList" method="post">
        <div class="row">
            <div class="col-2">
                <label class="sr-only" for="inlineFormInput">Attendance Date</label>
            </div>
            <div class="col-5">
                
                <input type="date" class="form-control mb-2" name="d" id="d" placeholder="Attendance Date">
            </div>


            <div class="col-2">
                <button type="submit" class="btn btn-primary mb-2">Get Data</button>
            </div>
        </div>
    </form>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>S.No.</td>
                <td>Network | Region</td>
                <td>Attendance</td>
                <td>Remarks</td>
                <td>Mark Time</td>
                <td>View Marked Location</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sno++;
                <tr>
                    <td>@sno</td>
                    <td>@item.NetWorkName</td>
                    <td>@item.Attendance</td>
                    <td>@item.Remarks</td>
                    <td>@item.MarkDate</td>
                    <td><a href="https://maps.google.com?q=@item.LatLong" target="_blank">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

