@model List<CSPVisitView>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
     Layout = "_Layout2.cshtml";
}

<table class="table table-responsive-sm table-bordered">
    <thead>
        <tr>
            <th>
                CSP
            </th>
            <th>
                Employee
            </th>
            <th>
                Visit Date
            </th>
            <th>
                System Log Date
            </th>
            <th>
                Map Location
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.BCDetails.CSPName (@x.CSPId) </td>
            <td> @x.EmployeeDetails.EmployeeName (@x.UserId)</td>
            <td>@x.VisitDate</td>
            <td>@x.SystemLogDate</td>
            <td><a href="https://maps.google.com?q=@x.Location_lat,@x.Location_long" target="_blank">View Location</a></td>
            <td><a href="/Visit/ReportCSP/@x.Id">View Report</a></td>
        </tr>
    }
</table>