@model CSPVisit
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout2.cshtml";
}



<b style="margin-top:15px;margin-left:15px;">Confirm Visit Date</b>

@using (Html.BeginForm())
{
    <div style="margin-top: 10px; margin-left: 5px; margin-right: 50px;" class="row">
        <div class="col-sm-12 col-md-6">
            User Id
        </div>
        <div class="col-sm-12 col-md-6">
            <input type="text" name="UserId" value="@Model.UserId" class="form-control" readonly />
        </div>
    
        <div class="col-sm-12 col-md-6">
            CSP Id
        </div>
        <div class="col-sm-12 col-md-6">
            <input type="text" name="CSPId" value="@Model.CSPId" class="form-control" readonly />
        </div>
   
        <div class="col-sm-12 col-md-6">
            Visit Date
        </div>
        <div class="col-sm-12 col-md-6">
            <input type="date" name="VisitDate" value="@Model.VisitDate.ToShortDateString()" class="form-control"  />
            <input type="hidden" name="token" value="@Model.VisitRemarks" />
            <input type="hidden" name="lat" value="@Model.Location_lat" />
            <input type="hidden" name="loc_long" value="@Model.Location_long" />
        </div>
    
        <div class="col-sm-12 col-md-6" style="margin-top:10px;">
            <button type="submit" class="btn btn-primary">Create Visit</button>
        </div>

    </div>
}
<div style="margin-left:15px;margin-top:10px;" class="embed-responsive embed-responsive-1by1">
    <iframe class="embed-responsive-item" style="width:90%"  src="https://maps.google.com?q=@Model.Location_lat,@Model.Location_long&output=svembed">

</iframe>

</div>
