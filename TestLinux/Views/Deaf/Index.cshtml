@{
}

<div class="container" style="margin-top:10px;">
    <h3 class="innerhd">
        Search DEAF Details
    </h3>
    <div class="row">
        <div class="col-md-5">
            <form method="post" action="/Deaf/">


                @if ((bool)ViewData["IsPostBack"] == false)
                {
                    <input class="form-control" type="text" name="Cust_Name" style="margin-bottom:10px;" placeholder="Customer Name" />
                    <input class="form-control" type="text" name="Address" style="margin-bottom:10px;" placeholder="Address" />

                    <input type="hidden" style="margin-bottom:10px;" name="token" value="@ViewData["Captcha"]" />
                    <input class="form-control" type="text" name="captcha" placeholder="Code" />
                    <img style="margin-top:10px;" src="data:image/jpeg;base64,@Convert.ToBase64String((byte[])ViewData["CaptchaImage"])" />
                    <button style="margin-top:10px;" class="btn btn-primary" type="submit">Search</button>
                }

            </form>
            @if ((bool)ViewData["IsPostBack"] == true)
            {
                <table class="table table-bordered table-sm table-striped">
                    <thead>
                        <tr>

                            <th>Customer Name</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    @if( ((List<TestLinux.DeafData>)ViewData["Result"]).Count == 0)
                    {
                        <tr>
                         <td colspan="2">No Record Found</td>
                      </tr>           
                    }

                    @foreach (var item in (List<TestLinux.DeafData>)ViewData["Result"])
            {
        <tr>
            <td>@item.Cust_Name</td>
            <td>@item.Branch</td>
        </tr>

            }
        </table>

                
            }



            </div>
    </div>
</div>

    