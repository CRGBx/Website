<div class="container" style="margin-top:10px;">
    <h3 class="innerhd">
        Verify Bank Guarantee Details
    </h3>
    <div class="row">
        <div class="col-md-5">
            <form method="post" action="/Deaf/CheckBG">


                @if ((bool)ViewData["IsPostBack"] == false)
                {
                    if ((bool)ViewData["qr"] == true)
                    {
                        <input class="form-control" readonly type="text" name="bg_no" style="margin-bottom:10px;" value="@ViewData["bg_no"]" placeholder="Bank Guarantee NUmber" />
                        <input class="form-control" readonly type="number" name="amount" style="margin-bottom:10px;" placeholder="Amount" value="@ViewData["amount"]" />

                    }
                    else
                    {
                        <input class="form-control" type="text" name="bg_no" style="margin-bottom:10px;" value="@ViewData["bg_no"]" placeholder="Bank Guarantee NUmber" />
                        <input class="form-control" type="number" name="amount" style="margin-bottom:10px;" placeholder="Amount" value="@ViewData["amount"]" />

                    }

                    <input type="hidden" style="margin-bottom:10px;" name="token" value="@ViewData["Captcha"]" />
                    <input class="form-control" type="text" name="captcha" placeholder="Code" />
                    <img style="margin-top:10px;" src="data:image/jpeg;base64,@Convert.ToBase64String((byte[])ViewData["CaptchaImage"])" />
                    <button style="margin-top:10px;" class="btn btn-primary" type="submit">Search</button>
                }

            </form>
            @if ((bool)ViewData["IsPostBack"] == true)
            {
                if ((bool)ViewData["IsSuccess"] == true)
                {
                    <p>Download copy of guarantee from below link. It will be available for 15 mins only. </p>
                    <ul>
                        <li>
                            <a href="@ViewData["BGLink"]">Download Copy of BG</a>
                        </li>
                    </ul>
                }
                else
                {
                    <p>Entered data do not match , please recheck with branch office. </p>
                }

                

                
            }



            </div>
    </div>
</div>

    